{
  "require": {
    "ext-simplexml": "*",
    "ext-dom": "*",
    "ext-libxml": "*",
    "php": ">=8.1",
    "symfony/console": "^5.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^8.5"
  },
  "autoload": {
    "psr-4": {
      "Life\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Life\\": "tests/"
    }
  },
  "scripts": {
    "test": "php vendor/bin/phpunit tests",
    "game": "php run.php game:run",
    "game:custom": "@php run.php game:run --input=$INPUT --output=$OUTPUT"
  }
}
